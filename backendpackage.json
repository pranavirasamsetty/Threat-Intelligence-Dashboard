{
  "name": "threat-dashboard-backend",
  "version": "1.0.0",
  "description": "Backend API for Threat Intelligence Dashboard",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --detectOpenHandles",
